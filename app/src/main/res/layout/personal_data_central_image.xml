<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout_cell">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="200dp"
        android:layout_height="240dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/profile_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/personal_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="175cm"
        app:layout_constraintCircle="@id/profile_image"
        app:layout_constraintCircleRadius="140dp"
        app:layout_constraintCircleAngle="75"
        android:padding="2dp"/>

    <TextView
        android:id="@+id/personal_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="70kg"
        app:layout_constraintCircle="@id/profile_image"
        app:layout_constraintCircleRadius="140dp"
        app:layout_constraintCircleAngle="105"/>

    <TextView
        android:id="@+id/personal_distance_mean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/distance_mean"
        app:layout_constraintCircle="@id/profile_image"
        app:layout_constraintCircleRadius="140dp"
        app:layout_constraintCircleAngle="255"/>

    <TextView
        android:id="@+id/personal_steps_mean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/steps_mean"
        app:layout_constraintCircle="@id/profile_image"
        app:layout_constraintCircleRadius="140dp"
        app:layout_constraintCircleAngle="285"/>

    <ImageView
        android:id="@+id/add_photo_iv"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_add_photo"
        app:layout_constraintBottom_toBottomOf="@+id/profile_image"
        app:layout_constraintEnd_toEndOf="@+id/profile_image" />

    <ImageView
        android:id="@+id/battery_lvl_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:src="@drawable/ic_battery_10"
        app:layout_constraintEnd_toStartOf="@+id/battery_lvl_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/battery_lvl_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:visibility="gone"
        android:text="99%"
        app:layout_constraintBottom_toBottomOf="@+id/battery_lvl_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/battery_lvl_iv" />

</android.support.constraint.ConstraintLayout>