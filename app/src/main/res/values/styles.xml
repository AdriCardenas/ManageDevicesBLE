<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Original Text-->

    <style name="Roboto" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Roboto.Medium" parent="Roboto">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Roboto.Big" parent="Roboto">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Roboto.ExtraBig" parent="Roboto">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Roboto.ExtraBig.Bold" parent="Roboto.ExtraBig">
        <item name="android:textStyle">bold</item>
    </style>

    <!--Text Input-->
    <style name="TextInput.Error" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/red_alert</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextInput.Hint" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
